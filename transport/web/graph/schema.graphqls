# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Status {
  mainVersion: String!
  tdlibVersion: String!
  userId: Int64!
}

type Chat {
  id: ID!
  name: String!
  messages: [Message!]!
}

type Message {
  id: ID!
  content: String!
  chat: Chat!
}

type Query {
  status: Status!
  chats: [Chat!]!
}

input NewMessage {
  content: String!
  chatId: String!
}

type Mutation {
  createMessage(input: NewMessage!): Message!
}

scalar Int32
scalar Int64